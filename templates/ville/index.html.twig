{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}

<div id="l-constrained">
    <div class="single-city">
        {% if ville is empty %}
            <p class="error">{{ error }}</p>
        {% else %}
            <div class="city city-{{ ville.id }}">
                <h2 class="city-name">{{ ville.nom }}</h2>
                {% for restaurant in ville.restaurants %}
                    <div class="restaurant">
                        <div class="restaurant-infos">
                            <a href="/restaurant/{{ restaurant.nom }}"><h3 class="restaurant-name"><span class="label">Nom :</span> {{ restaurant.nom }}</h3></a>
                            <p><span class="label">Adresse :</span> {{ restaurant.adresse }}</p>
                            <p><span class="label">Propri√©taire :</span> {{ restaurant.proprietaire.nom }} {{ restaurant.proprietaire.prenom }}</p>
                        </div>
                        <img src="{{ restaurant.image }}" alt="{{ restaurant.nom }}">
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}